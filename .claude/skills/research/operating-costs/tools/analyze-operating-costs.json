{
  "name": "analyze_operating_costs",
  "description": "Analyze operating cost benchmarks for a hotel property. Returns recommended rates for each USALI cost category, specifying whether each is based on room revenue or total revenue.",
  "input_schema": {
    "type": "object",
    "properties": {
      "location": {
        "type": "string",
        "description": "The property location"
      },
      "room_count": {
        "type": "integer",
        "description": "Number of rooms"
      },
      "property_level": {
        "type": "string",
        "enum": ["budget", "average", "luxury"],
        "description": "Property tier/positioning"
      },
      "has_fb": {
        "type": "boolean",
        "description": "Whether property has F&B operations"
      },
      "has_events": {
        "type": "boolean",
        "description": "Whether property hosts events"
      },
      "current_adr": {
        "type": "number",
        "description": "Current or target ADR"
      },
      "market_region": {
        "type": "string",
        "description": "Market region (e.g., North America, Latin America)"
      }
    },
    "required": ["location", "room_count", "property_level"]
  }
}
