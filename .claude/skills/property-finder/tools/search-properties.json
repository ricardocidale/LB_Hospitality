{
  "name": "search_properties",
  "description": "Search for real estate properties using the RapidAPI 'Realty in US' service. Supports filtering by location, price range, bedrooms, lot size, and property type. Returns normalized property data with validated listing URLs.",
  "input_schema": {
    "type": "object",
    "properties": {
      "location": {
        "type": "string",
        "description": "City, State (e.g., 'Asheville, NC') or ZIP code (e.g., '28801')"
      },
      "price_min": {
        "type": "integer",
        "description": "Minimum listing price in USD"
      },
      "price_max": {
        "type": "integer",
        "description": "Maximum listing price in USD"
      },
      "beds_min": {
        "type": "integer",
        "description": "Minimum number of bedrooms"
      },
      "lot_size_min_acres": {
        "type": "number",
        "description": "Minimum lot size in acres (converted to sqft for API: acres Ã— 43,560)"
      },
      "property_type": {
        "type": "string",
        "enum": ["any", "single_family", "multi_family", "condo", "townhome", "land", "farm"],
        "description": "Property type filter"
      },
      "offset": {
        "type": "integer",
        "description": "Pagination offset (default 0, page size 20)"
      }
    },
    "required": ["location"]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "results": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "externalId": { "type": "string" },
            "address": { "type": "string" },
            "city": { "type": "string", "nullable": true },
            "state": { "type": "string", "nullable": true },
            "zipCode": { "type": "string", "nullable": true },
            "price": { "type": "number", "nullable": true },
            "beds": { "type": "integer", "nullable": true },
            "baths": { "type": "number", "nullable": true },
            "sqft": { "type": "number", "nullable": true },
            "lotSizeAcres": { "type": "number", "nullable": true },
            "propertyType": { "type": "string", "nullable": true },
            "imageUrl": { "type": "string", "nullable": true },
            "listingUrl": { "type": "string", "nullable": true }
          }
        }
      },
      "total": { "type": "integer" },
      "offset": { "type": "integer" }
    }
  }
}
