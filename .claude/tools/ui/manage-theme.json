{
  "name": "manage_theme",
  "description": "Create, update, delete, or list user-defined themes. Each theme defines a complete set of color tokens, fonts, and chart colors.",
  "parameters": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": ["create", "update", "delete", "list", "activate"],
        "description": "Action to perform on themes"
      },
      "theme_id": {
        "type": "string",
        "description": "Theme ID (required for update, delete, activate)"
      },
      "name": {
        "type": "string",
        "description": "Display name for the theme"
      },
      "tokens": {
        "type": "object",
        "description": "Theme token values (colors, fonts, gradients)",
        "properties": {
          "base": { "type": "string" },
          "accent": { "type": "string" },
          "secondary": { "type": "string" },
          "text": { "type": "string" },
          "textMuted": { "type": "string" },
          "card": { "type": "string" },
          "cardBorder": { "type": "string" },
          "glass": { "type": "string" },
          "glassBorder": { "type": "string" },
          "destructive": { "type": "string" },
          "chart": { "type": "array", "items": { "type": "string" }, "minItems": 5, "maxItems": 5 },
          "headerGradient": { "type": "array", "items": { "type": "string" }, "minItems": 3, "maxItems": 3 },
          "fontHeading": { "type": "string" },
          "fontBody": { "type": "string" }
        }
      }
    },
    "required": ["action"]
  }
}
