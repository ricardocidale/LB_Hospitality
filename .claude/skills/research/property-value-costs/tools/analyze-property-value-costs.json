{
  "name": "analyze_property_value_costs",
  "description": "Analyze property value-based cost benchmarks (insurance and property taxes) for a hotel property. Returns recommended rates as percentages of total property value.",
  "input_schema": {
    "type": "object",
    "properties": {
      "location": {
        "type": "string",
        "description": "The property location"
      },
      "property_level": {
        "type": "string",
        "enum": ["budget", "average", "luxury"],
        "description": "Property tier/positioning"
      },
      "purchase_price": {
        "type": "number",
        "description": "Property purchase price"
      },
      "building_improvements": {
        "type": "number",
        "description": "Building improvement costs"
      },
      "room_count": {
        "type": "integer",
        "description": "Number of rooms"
      },
      "market_region": {
        "type": "string",
        "description": "Market region"
      }
    },
    "required": ["location", "property_level", "room_count"]
  }
}
