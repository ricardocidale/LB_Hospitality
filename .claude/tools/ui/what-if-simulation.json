{
  "name": "what_if_simulation",
  "description": "Run a what-if simulation by adjusting one or more assumptions and returning recalculated projections.",
  "parameters": {
    "type": "object",
    "properties": {
      "property_id": {
        "type": "number",
        "description": "Property to simulate (optional, defaults to portfolio)"
      },
      "adjustments": {
        "type": "object",
        "description": "Key-value pairs of assumption overrides",
        "properties": {
          "adrGrowthRate": { "type": "number" },
          "startOccupancy": { "type": "number" },
          "maxOccupancy": { "type": "number" },
          "fixedCostEscalationRate": { "type": "number" },
          "exitCapRate": { "type": "number" },
          "ltv": { "type": "number" },
          "interestRate": { "type": "number" }
        }
      },
      "save_as_scenario": {
        "type": "string",
        "description": "Optional name to save results as a named scenario"
      }
    },
    "required": ["adjustments"]
  }
}
