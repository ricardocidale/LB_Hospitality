{
  "name": "analyze_competitive_set",
  "description": "Identify and analyze the competitive set of comparable boutique hotel properties in a specific market. Returns details on competing properties including their room counts, ADRs, and market positioning.",
  "input_schema": {
    "type": "object",
    "properties": {
      "location": {
        "type": "string",
        "description": "The property location"
      },
      "room_count": {
        "type": "integer",
        "description": "Subject property room count"
      },
      "current_adr": {
        "type": "number",
        "description": "Subject property ADR"
      },
      "property_level": {
        "type": "string",
        "enum": ["budget", "average", "luxury"],
        "description": "Property tier"
      },
      "has_events": {
        "type": "boolean",
        "description": "Whether property hosts events"
      },
      "has_wellness": {
        "type": "boolean",
        "description": "Whether property offers wellness"
      },
      "has_fb": {
        "type": "boolean",
        "description": "Whether property has F&B"
      }
    },
    "required": ["location", "room_count", "current_adr", "property_level"]
  }
}
