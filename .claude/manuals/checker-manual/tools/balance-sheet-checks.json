{
  "name": "balance_sheet_verification",
  "description": "Checks that the balance sheet balances for each property and period",
  "checks": [
    {
      "id": "BS-01",
      "name": "Assets = Liabilities + Equity",
      "formula": "Total Assets == Total Liabilities + Total Equity",
      "tolerance": 0.01,
      "severity": "CRITICAL",
      "applies_to": ["property", "consolidated"]
    },
    {
      "id": "BS-02",
      "name": "Accumulated Depreciation Monotonic",
      "formula": "AccumDepr(t) >= AccumDepr(t-1)",
      "tolerance": 0,
      "severity": "CRITICAL",
      "applies_to": ["property"]
    },
    {
      "id": "BS-03",
      "name": "Cash Non-Negative",
      "formula": "EndingCash >= 0 for all periods",
      "tolerance": 0,
      "severity": "CRITICAL",
      "applies_to": ["property", "company", "consolidated"]
    },
    {
      "id": "BS-04",
      "name": "Debt Outstanding Non-Negative",
      "formula": "DebtOutstanding >= 0 for all periods",
      "tolerance": 0,
      "severity": "CRITICAL",
      "applies_to": ["property"]
    }
  ]
}
