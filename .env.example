# L+B Hospitality Portal - Environment Variables
# Copy this file to .env and fill in the values

# ─── Required ───────────────────────────────────────────
ADMIN_PASSWORD=           # Admin user password
CHECKER_PASSWORD=         # Checker/auditor user password
DATABASE_URL=             # PostgreSQL connection string (e.g. postgresql://user:pass@host:5432/db)

# ─── Server ─────────────────────────────────────────────
NODE_ENV=development      # development | production
PORT=5000                 # Server port (default: 5000)

# ─── AI Providers (at least one required for market research) ───
AI_INTEGRATIONS_ANTHROPIC_API_KEY=    # Anthropic Claude API key
AI_INTEGRATIONS_OPENAI_API_KEY=       # OpenAI API key
AI_INTEGRATIONS_GEMINI_API_KEY=       # Google Gemini API key

# ─── AI Provider Base URLs (optional, for custom endpoints) ─────
# AI_INTEGRATIONS_ANTHROPIC_BASE_URL=
# AI_INTEGRATIONS_OPENAI_BASE_URL=
# AI_INTEGRATIONS_GEMINI_BASE_URL=

# ─── External APIs (optional) ──────────────────────────
# RAPIDAPI_KEY=           # RapidAPI key for property search

# ─── Object Storage (Replit, auto-configured) ──────────
# PRIVATE_OBJECT_DIR=     # Private object storage directory
# PUBLIC_OBJECT_SEARCH_PATHS=  # Public object search paths (comma-separated)
