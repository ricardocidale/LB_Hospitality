{
  "name": "manage_favorites",
  "description": "Manage saved/favorited properties. Supports listing, saving, removing, and annotating prospective properties from external real estate searches.",
  "input_schema": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": ["list", "save", "remove", "update_notes"],
        "description": "The operation to perform"
      },
      "property_id": {
        "type": "integer",
        "description": "Database ID of the saved property (required for remove and update_notes)"
      },
      "property_data": {
        "type": "object",
        "description": "Property data to save (required for save action)",
        "properties": {
          "externalId": { "type": "string" },
          "address": { "type": "string" },
          "city": { "type": "string", "nullable": true },
          "state": { "type": "string", "nullable": true },
          "zipCode": { "type": "string", "nullable": true },
          "price": { "type": "number", "nullable": true },
          "beds": { "type": "integer", "nullable": true },
          "baths": { "type": "number", "nullable": true },
          "sqft": { "type": "number", "nullable": true },
          "lotSizeAcres": { "type": "number", "nullable": true },
          "propertyType": { "type": "string", "nullable": true },
          "imageUrl": { "type": "string", "nullable": true },
          "listingUrl": { "type": "string", "nullable": true }
        },
        "required": ["externalId", "address"]
      },
      "notes": {
        "type": "string",
        "description": "Notes text (required for update_notes action)"
      }
    },
    "required": ["action"]
  }
}
