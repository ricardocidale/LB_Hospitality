{
  "name": "analyze_adr",
  "description": "Analyze average daily rate (ADR) benchmarks for a specific market. Returns market average ADR, boutique hotel ADR range, comparable property ADRs, and a recommended ADR range based on property positioning.",
  "input_schema": {
    "type": "object",
    "properties": {
      "location": {
        "type": "string",
        "description": "The property location"
      },
      "current_adr": {
        "type": "number",
        "description": "The property's current or target ADR"
      },
      "room_count": {
        "type": "integer",
        "description": "Number of rooms"
      },
      "property_level": {
        "type": "string",
        "enum": ["budget", "average", "luxury"],
        "description": "Property tier/positioning"
      },
      "has_fb": {
        "type": "boolean",
        "description": "Whether property has F&B operations"
      },
      "has_events": {
        "type": "boolean",
        "description": "Whether property hosts events"
      },
      "has_wellness": {
        "type": "boolean",
        "description": "Whether property offers wellness programming"
      }
    },
    "required": ["location", "current_adr", "room_count", "property_level"]
  }
}
