{
  "include": ["client/src/**/*", "client/replit_integrations/**/*", "shared/**/*", "server/**/*", "calc/**/*", "domain/**/*", "engine/**/*", "statements/**/*", "analytics/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@calc/*": ["./calc/*"],
      "@domain/*": ["./domain/*"],
      "@engine/*": ["./engine/*"],
      "@statements/*": ["./statements/*"],
      "@analytics/*": ["./analytics/*"]
    }
  }
}
