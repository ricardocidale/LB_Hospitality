{
  "name": "analyze_cap_rates",
  "description": "Analyze capitalization rates for hotel investment transactions in a specific market. Returns market cap rate ranges, boutique hotel-specific ranges, recent comparable transactions, and a recommended acquisition/exit cap rate range.",
  "input_schema": {
    "type": "object",
    "properties": {
      "location": {
        "type": "string",
        "description": "The property location"
      },
      "market_region": {
        "type": "string",
        "description": "Broader market region"
      },
      "property_level": {
        "type": "string",
        "enum": ["budget", "average", "luxury"],
        "description": "Property tier"
      },
      "room_count": {
        "type": "integer",
        "description": "Number of rooms"
      },
      "purchase_price": {
        "type": "number",
        "description": "Property purchase price"
      }
    },
    "required": ["location", "market_region", "property_level", "room_count"]
  }
}
